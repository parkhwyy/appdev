<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#292828">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:lineSpacingExtra="4sp"
        android:text="Employee Management System"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:fontFamily="sans-serif-condensed-medium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Choose from the following options"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="View All Employees"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_employee_add"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Add Employee"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_employee_update"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Update Employee"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_employee_delete"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:background="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Delete Employee"
        android:textColor="#ffffff" />

</LinearLayout>