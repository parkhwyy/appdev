<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#330033"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/editdelbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#f2d9e6"
        android:text="EDIT/DELETE"
        android:textColor=" #990073 "
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/acme" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#f2d9e6"
        android:text="ADD"
        android:textColor=" #990073 "
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/acme" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:text="Wine Inventory"
        android:textColor="#f2d9e6"
        android:textSize="48sp"
        android:textStyle="bold"
        app:fontFamily="@font/bad_script" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="405dp"
        android:background="#f2d9e6"
        android:text="SEARCH"
        android:textColor=" #990073 "
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/acme" />

    <Button
        android:id="@+id/viewbtn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="113dp"
        android:background="#f2d9e6"
        android:text="VIEW"
        android:textColor=" #990073 "
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/acme" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="388dp"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="111dp"
        app:srcCompat="@drawable/wine" />

</RelativeLayout>